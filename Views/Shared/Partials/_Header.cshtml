@*
    ParkIRC - Parking Management System
*@
@{
}

<header class="geex-header">
    <div class="geex-header__wrapper">
        <div class="geex-header__logo-wrapper">
            <a href="@Url.Action("Dashboard","Parking")" class="geex-header__logo">
                <img class="logo-lite" src="~/img/logo-dark.svg" alt="Header logo" />
                <img class="logo-dark" src="~/img/logo-lite.svg" alt="Header logo" />
            </a>
            <span class="ms-3 fw-bold">Sistem Manajemen Parkir</span>
        </div>
        <nav class="geex-header__menu-wrapper">
            <ul class="geex-header__menu">
                <!-- Dashboard -->
                <li class="geex-header__menu__item">
                    <a href="@Url.Action("Dashboard","Parking")" class="geex-header__menu__link">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <!-- Kendaraan Masuk/Keluar -->
                <li class="geex-header__menu__item has-children">
                    <a href="#" class="geex-header__menu__link">
                        <i class="fas fa-car me-2"></i>
                        <span>Kendaraan</span>
                    </a>
                    <ul class="geex-header__submenu">
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("VehicleEntry","Parking")" class="geex-header__menu__link">
                                <i class="fas fa-sign-in-alt me-2"></i> Kendaraan Masuk
                            </a>
                        </li>
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("VehicleExit","Parking")" class="geex-header__menu__link">
                                <i class="fas fa-sign-out-alt me-2"></i> Kendaraan Keluar
                            </a>
                        </li>
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("Index","History")" class="geex-header__menu__link">
                                <i class="fas fa-history me-2"></i> Riwayat
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Laporan/Analisis -->
                <li class="geex-header__menu__item has-children">
                    <a href="#" class="geex-header__menu__link">
                        <i class="fas fa-chart-bar me-2"></i>
                        <span>Laporan & Analisis</span>
                    </a>
                    <ul class="geex-header__submenu">
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("Index","Reporting")" class="geex-header__menu__link">
                                <i class="fas fa-file-alt me-2"></i> Laporan
                            </a>
                        </li>
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("PeakHourAnalysis","Reporting")" class="geex-header__menu__link">
                                <i class="fas fa-chart-line me-2"></i> Analisis
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Kelola -->
                <li class="geex-header__menu__item has-children">
                    <a href="#" class="geex-header__menu__link">
                        <i class="fas fa-cogs me-2"></i>
                        <span>Kelola</span>
                    </a>
                    <ul class="geex-header__submenu">
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("ParkingSlots","Management")" class="geex-header__menu__link">
                                <i class="fas fa-th me-2"></i> Kelola Slot
                            </a>
                        </li>
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("Operators","Management")" class="geex-header__menu__link">
                                <i class="fas fa-users me-2"></i> Kelola Operator
                            </a>
                        </li>
                        <li class="geex-header__menu__item">
                            <a href="@Url.Action("Shifts","Management")" class="geex-header__menu__link">
                                <i class="fas fa-clock me-2"></i> Kelola Shift
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Tarif Parkir -->
                <li class="geex-header__menu__item">
                    <a href="@Url.Action("Index","Rates")" class="geex-header__menu__link">
                        <i class="fas fa-money-bill-wave me-2"></i>
                        <span>Tarif Parkir</span>
                    </a>
                        </li>

                <!-- Pengaturan -->
                        <li class="geex-header__menu__item">
                    <a href="@Url.Action("Settings","Parking")" class="geex-header__menu__link">
                        <i class="fas fa-wrench me-2"></i>
                        <span>Pengaturan</span>
                    </a>
                </li>
            </ul>
        </nav>
        
        <!-- Login/User Info -->
        <partial name="Partials/_LoginPartial" />
        
        <!-- Right Side - Logout -->
        <div class="geex-header__right-side">
        <div class="geex-header__action">
                <a href="@Url.Action("Logout","Auth")" class="geex-btn">
                    <i class="fas fa-power-off"></i>
                    <span>Keluar</span>
                </a>
            </div>
        </div>
    </div>
</header>